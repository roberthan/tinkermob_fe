script#add_snapshot_tile_template(type="text/template")
    div.snapshot_tile.link
        img.snapshot_tile_pic(src!="/img/new_idea.png", width='290px', height='230px')

script#new_snapshot_template(type="text/template")
     div#input_modal.overlay-container
        div.window-container.zoomin
            h3.header <% if(typeof revision !== 'undefined'){ %> Edit Snapshot <% } else{ %> New Snapshot <% } %>
            form(enctype="multipart/form-data").new_snapshot_form.input_form
                input(name='file', type='file').upload_file
                br
                textarea.textarea_input.textarea_details(placeholder='Details (optional)') <%= text %>
                <% if(typeof revision !== 'undefined'){ %>
                div.toggle_delete.toggle_container
                    div.toggle_label Delete Snapshot
                    div.toggle
                        img.button(src='#{img_path}/on_off.png', height='32px')
                    div.toggle_selection_label.toggle_selection_delete
                <% } %>
            //progress.upload_progress
            div.btn-container
                span.btn.btn_add.left <% if(typeof revision !== 'undefined'){ %> Save <% } else{ %> Add <% } %>
                span.btn.btn_cancel.right Cancel

script#snap_detail_template(type="text/template")
    div.overlay-container
        div.window-container.zoomin
            img.pic(src!="<%= original_image %>")
            div.infobar <%= text %>
            span.close Close me
