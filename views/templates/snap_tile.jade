script#snapshot_tile_template(type="text/template")
    div.snapshot_tile.link
        <% if(user === USER){ %>
        div.snapshot_tile_resize
            div.arrow_right.btn_x_scale
            div.arrow_down.btn_y_scale
            div.snapshot_tile_resize_text resize
        div.snapshot_tile_profile
            div.pg_btn.pg_btn_profile.left
        <% } %>
        div.snapshot_tile_pic(style!="background-image:url('<%= tile_image %>')")
        div.snapshot_tile_infobar
            div.snapshot_tile_infobar_text <%= text %>
            <% if(user===USER){ %>
            div.pg_btn.pg_btn_edit.right
            <% } %>
            //img.shadow(src="#{img_path}/shadow.png", width='290px')

script#add_snapshot_tile_template(type="text/template")
    div.snapshot_tile.link
        img.snapshot_tile_pic(src!="/img/new_idea.png", width='290px', height='230px')

script#new_snapshot_template(type="text/template")
     div#input_modal.modal_background_container
        div.modal_foreground_container.medium_long.modal_absolute_sizing.zoomin
            h3.header <% if(typeof revision !== 'undefined'){ %> Edit Snapshot <% } else{ %> New Snapshot <% } %>
            form(enctype="multipart/form-data").new_snapshot_form.input_form
                input(name='file', type='file').upload_file
                br
                textarea.textarea_input.textarea_details(placeholder='Details (optional)') <%= text %>
                <% if(typeof revision !== 'undefined'){ %>
                div.toggle_delete.toggle_container
                    div.toggle_label Delete Snapshot
                    div.toggle
                        img.button(src='#{img_path}/on_off.png', height='32px')
                    div.toggle_selection_label.toggle_selection_delete
                <% } %>
            progress.upload_progress
            div.btn-container
                span.btn.btn_add.left <% if(typeof revision !== 'undefined'){ %> Save <% } else{ %> Add <% } %>
                span.btn.btn_cancel.right Cancel

script#snap_detail_template(type="text/template")
    div.modal_background_container
        div.modal_foreground_container.modal_relative_sizing
            <% if(display_image !== (IMG_PATH+"/cog.png")){ %>
            table.modal_table
                tbody
                    tr
                        td.modal_pic_container
                            img.modal_pic(src!="<%= display_image %>")
            div.infobar <%= text %>
            <% } else{ %>
            table.modal_table.modal_no_image
                tbody
                    tr
                        td.modal_pic_container
                            div.modal_txt_body <%= text %>
            <% } %>
            span.close Close me
