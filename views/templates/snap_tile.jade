script#snapshot_tile_template(type="text/template")
    div.snapshot_tile.link
        <% if(user === USER){ %>
        div.snapshot_tile_resize
            div.arrow_right.btn_x_scale
            div.arrow_down.btn_y_scale
            div.snapshot_tile_resize_text resize
        div.snapshot_tile_profile
            div.pg_btn.pg_btn_profile.left
            div.snapshot_tile_profile_text Idea Pic
        <% } %>
        img.snapshot_tile_pic(style!="background-image:url('<%= tile_image %>')")
