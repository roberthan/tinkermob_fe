username_color = #ffdabf
#user_profile_view{
    margin-top:8px;
    width: 100%;
    color:white;
}

.desktop #user_profile_view{
    margin-top: 80px;
}

#user_ideas{
    padding-top: 16px;
}

.fixed.user_profile_main_container{
    margin-bottom: 72px;
}
.user_profile_main_container{
    margin: 0 auto;
    max-width: 552px;
    /*height: 148px;*/
    padding: 16px;
}

.user_profile_img_container{
    float: left;
    margin: 0 16px;
}
.user_profile_img{
    -moz-border-radius: 8px;
    border-radius: 8px;
    max-width: 150px;
    max-height: 124px;
}

.user_profile_text_container{
    min-height: 48px;
    max-width: 100%;
    overflow:hidden;
}

.user_profile_bio{
    height: 72px;
    padding: 0 0 8px 8px;
    overflow: hidden;

    word-wrap: break-word;
}

.fixed.user_profile_stats_container{
    position: fixed;
    z-index: 100;
    top: 48px;
}
.user_profile_stats_container{
    height: 80px;
    clear: both;
    /*width: (8px + 96px ) * 4;*/
    /*margin: 0 auto;*/
    padding: 0 5%;
    width: 90%;
    background-color: #ffffff;
    /*background-image: url(STATIC_MEDIA_URL + "/bg_sub_header.jpg");*/
    background-repeat:no-repeat;
    background-size: 100%;
}

.android .user_profile_stats_container_inner{
    max-width: 420px;
}
.user_profile_stats_container_inner{
    max-width: 520px;
    margin: 0 auto;
    height: 100%;
}

.user_profile_text_container_username{
    padding-left: 8px;
    display: inline;
    color: username_color;
    font-size:22px;
}
.user_profile_text_container_username_sidenote{
    padding-left: 8px;
    display: inline;
    COLOR: white;
    font-size:18px;
    cursor: pointer;
}

.user_profile_stats_tile.btn_pressed{
    background-image: url(STATIC_MEDIA_URL + "/btn_profile_stat_depressed.png");
}

.user_profile_stats_tile:active{
    background-image: url(STATIC_MEDIA_URL + "/btn_profile_stat_depressed.png");
}
.user_profile_stats_tile{
    float: left;
    background-image: url(STATIC_MEDIA_URL + "/btn_profile_stat.png");
    background-repeat: no-repeat;
    width: 96px;
    height: 82px;
    margin: 4px 4px;
    color: #ffffff;
    text-align: center;
    cursor: pointer;
}

.user_profile_stats_tile_count{
    padding-top: 20px;
    font-size: 16px;
    font-weight: 400;
}

.user_profile_add_idea{
    float: left;
    font-size: 18px;
    padding-top: 16px;
    cursor: pointer;
}
.user_profile_add_idea_pic{
    display: none;
}
.desktop .user_profile_add_idea_pic{
    background-image: url(STATIC_MEDIA_URL + "/btn_add.png");
    background-repeat: no-repeat;
    width: 56px;
    height: 56px;
    display: block;
}

.user_profile_add_idea_pic:active{
    background-image: url(STATIC_MEDIA_URL + "/btn_add_pressed.png");
}

.user_profile_pg_btn_follow,
.user_profile_pg_btn_follow_pressed{
    float: left;
    font-size: 18px;
    margin-top: 20px;
    cursor: pointer;
    width: 96px;
    height: 48px;
    background-image: url(STATIC_MEDIA_URL + "/btn_follow.png");
    margin-right: 8px;
}
.user_profile_pg_btn_follow_pressed{
    background-image: url(STATIC_MEDIA_URL + "/btn_unfollow.png");
}
.android .user_profile_stats_container .btn_back{
    display: none;
}
.user_profile_stats_container .btn_back{
    position: absolute;
    left: 0;
    width: 16px;
    padding: 16px 4px;
    cursor: pointer;
    display: block;
}