#input_modal .window-container {
    margin: 4em auto;
    width: 520px;
    height: 600px;
    padding: 0;
    border-radius: 3px;
    text-align: center;
    overflow: auto;
}

#input_modal .medium_long{
    height: 500px;
}

#input_modal .extra_long{
    height: 760px;
}
.settings_form.input_form{
    height: 100%;
    padding-bottom: 16px;
}

#input_modal .window-container .header{
    height: 32px;
    padding: 8px 0;
    text-align: center;
    /*background-color: #58514D;*/
    background-image:url(STATIC_MEDIA_URL+'/bg_header.png');
    background-repeat:repeat-x;
    color: #ffffff;
}

#input_modal .input_form {
    /*text-align: center;*/
    /*padding:16px 0 8px 0 ;*/
    /*height: 460px;*/
}

#input_modal .upload_file {
    text-align: center;
    margin: 8px;
    font-family: "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;
    cursor: pointer;
}

#input_modal .new_snapshot_form .upload_file {
    height: 240px;
    width: 320px;
    border: 2px dotted gray;
    border-radius: 8px;
    -webkit-border-radius: 8px;
    -moz-border-radius: 8px;
}

#input_modal .settings_form .upload_file {
    width: 152px;
    height: 128px;
    border: 2px solid #58514D;
    margin-left: 38px;
}

#input_modal .text_input{
    width: 304px;
    margin: 8px;
    padding: 8px;
    font-size: 18px;
    border-radius: 4px;
    -webkit-border-radius: 4px;
    -moz-border-radius: 4px;
}

#input_modal .short_inputs,
#input_modal .settings_form .upload_file{
    padding: 8px;
}
#input_modal .short_text_input{
    width: 240px;
    margin: 4px;
    padding: 8px;
    font-size: 18px;
    border-radius: 4px;
    -webkit-border-radius: 4px;
    -moz-border-radius: 4px;
}

.textarea_input{
    height: 64px;
    width: 320px;
    resize: none;
    margin: 8px;
    font-size: 18px;
    padding: 8px;
    border-radius: 4px;
    -webkit-border-radius: 4px;
    -moz-border-radius: 4px;
    font-family: "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;
}

#input_modal .char_count{
    text-align: right;
    margin: -8px 88px 8px 88px;
    color: gray;
}

#input_modal .char_count div{
    display: inline;
}

#input_modal .txt_email, #input_modal .txt_username,
#input_modal .txt_password1, #input_modal .txt_password2{
    width: 192px;
}

#input_modal .textarea_bio{
    width: 424px;
    height: 48px;
}

#input_modal .btn-container{
    margin: 0 80px;
}

#input_modal .btn{
    margin: 8px;
    background-image: url("/img/btn_submit.png");
    width: 160px;
    height: 18px;
    padding: 11px 0;
    color: white;
    font-size: 18px;
    cursor: pointer;
    display: inline-block;
}

#input_modal .main_inputs{
    float: left;
    margin: 0 32px;
}

#input_modal .toggle_container{
    height: 32px;
    font-size: 18px;
    text-align: left;
}

#input_modal .toggle_delete{
    margin: 0 auto;
    width: 336px;
}

#input_modal .dropdown{
    height: 22px;
    font-size: 16px;
    float: right;
    margin: 6px 0;
}

#input_modal .toggle{
    float: right;
}

#input_modal .toggle_container .toggle_label{
    float: left;
    padding: 4px 8px;
}
#input_modal .toggle_container .toggle_selection_label{
    float: right;
    padding: 4px 8px;
    text-align: right;
}

#input_modal .warning_placeholder::-webkit-input-placeholder{
    color: red;
}

#input_modal .text_warning{
    color: red;
    width: 480px;
    height: 16px;
    margin: 12px auto;
    text-align: center;
}
