body{
    margin: 0px;
    font-family: "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;
    font-weight: 400;
    height: auto;
    /*background-image:url('/img/background_tile_2.jpg');*/
    background-image:url('/img/128x128_tile2.jpg');
}
#body{
    padding: 0px;
    margin: 0px;
}

.btn{
    margin: 8px;
    background-image: url("/img/btn_submit.png");
    width: 160px;
    height: 18px;
    padding: 11px 0;
    color: white;
    font-size: 18px;
    cursor: pointer;
    text-align: center;
}
.other_options .btn {
    text-align: left;
    font-size: 17px;
}

.other_options .btn img{
    margin: -2px 4px 0 6px;
    float: left;
}

.left{
    float: left;
}
.right{
    float: right;
}
.content{
    width: 480px;
    height: 840px;
    margin: 48px auto;
}
.content .logo_img{
    width: 360px;
    margin: 24px 60px 0 60px;
}
.content .other_options{
    margin: 0 auto;
    width: 360px;
    height: 72px;
}
.auth_form{
    text-align: center;
    width: 360px;
    margin: 28px auto;
}

.auth_form .btn_text{
    margin: 0 ;
}

.auth_form .text_input{
    width: 328px;
    margin: 0;
    padding: 8px;
    font-size: 18px;
}
.auth_form .txt_reset_email{
    -moz-border-radius:8px; /* Firefox */
    -webkit-border-radius: 8px; /* Safari, Chrome */
    border-radius: 8px; /* CSS3 */
}

.auth_form .txt_email{
    -moz-border-top-right-radius:8px; /* Firefox */
    -moz-border-top-left-radius:8px; /* Firefox */
    -webkit-border-top-left-radius: 8px; /* Safari, Chrome */
    -webkit-border-top-right-radius: 8px; /* Safari, Chrome */
    border-top-right-radius: 8px; /* CSS3 */
    border-top-left-radius: 8px; /* CSS3 */
}

.auth_form .txt_password{
    -moz-border-bottom-right-radius:8px; /* Firefox */
    -moz-border-bottom-left-radius:8px; /* Firefox */
    -webkit-border-bottom-left-radius: 8px; /* Safari, Chrome */
    -webkit-border-bottom-right-radius: 8px; /* Safari, Chrome */
    border-bottom-right-radius: 8px; /* CSS3 */
    border-bottom-left-radius: 8px; /* CSS3 */
}

.auth_form .btn_text{
    margin: 2px 0;
}
.auth_form .row{
    margin: 16px 0;
}

#form_reset_password,
#form_join{
    display: none;
}

.warning_placeholder::-webkit-input-placeholder{
    color: red;
}

.text_warning{
    color: red;
    width: 480px;
    height: 16px;
    margin: 12px auto;
    text-align: center;
}